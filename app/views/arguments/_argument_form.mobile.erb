<%= form_for (@argument) do |f| %>

	<%= render 'shared/error_messages', object: f.object %>	
	
	<%= f.hidden_field :viewpoint_id, value: @viewpoint.id %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.hidden_field :is_up_vote, value: @is_up_vote %>
	
	
	<% if @is_up_vote %>
		<%= f.label :content, "vote it up!" %>
		<%= f.text_area :content, placeholder: "your argument in 500 characters of less...", rows: 3 %>
		<%= f.submit "vote up!", class: "btn btn-small btn-primary" %>
	<% else %>
		<%= f.label :content, "vote it down!" %>
		<%= f.text_area :content, placeholder: "your argument in 500 characters of less...", rows: 3 %>
		<%= f.submit "vote down!", class: "btn btn-small btn-primary" %>
	<% end %>
		<%= link_to "cancel", debate_url(@viewpoint.debate)%>

	 

<% end %>

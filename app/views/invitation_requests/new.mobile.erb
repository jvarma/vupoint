<div class="section-title">get invited!</div>

<div class="row-fluid">
  
    <%= form_for(@invitation_request) do |f| %>


      	<%= f.label :email, "your email id" %>
        <%= f.email_field :email, placeholder: "@" %>

        <%= f.label :name, "full name" %>
      	<%= f.text_field :name, placeholder: "e.g. John Doe" %>

      	
      	<%= f.label :city, "your city" %>
      	<%= f.text_field :city %>

        <div class="row-fluid center">
        	<%= f.submit "submit", class: "btn btn-large btn-primary" %>
      	</div>

    <% end %>

</div>
<h2><%= link_to "cancel", new_user_path %></h2>
    

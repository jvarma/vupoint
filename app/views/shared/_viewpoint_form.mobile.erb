
<div class="section-title">
	what's your vupnt?
</div>
<%= form_for(@viewpoint) do |f| %>
  	<%= render 'shared/error_messages', object: f.object %>
  	<div class="field">
    	<%= f.text_area :desc, placeholder: "add a vupnt...", rows: 2 %>
  	</div>
 	<%= f.hidden_field :debate_id, value: @debate.id %>
 	<%= f.hidden_field :user_id, value: current_user.id %>
 	
  	<% if (current_user == @debate.user) || @debate.user.following?(current_user) %> 
  		<%= f.hidden_field :published, value: true %>
 		<div class="center">
	  		<%= f.submit "add your vupnt", class: "btn btn-large btn-primary" %>
		</div>
	<% else %>
		<%= f.hidden_field :published, value: false %>
 		<div class="center">
	  		<%= f.submit "suggest", class: "btn btn-large btn-primary" %>
		</div>
	<% end %>
<% end %>
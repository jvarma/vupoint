<li>
  <span class="content"><%= notification.message %></span>
  <div class="timestamp">
    sent <%= time_ago_in_words(notification.created_at) %> ago.
  </div>
    
  <div class="actions">
    <div class="delete">
        <%= link_to "delete", notification, method:  :delete,
                                     confirm: "You sure?" %>
    </div>
  </div>
</li>

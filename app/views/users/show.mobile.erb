<div class="row-fluid">
  <div class="span2">
    <div class="row-fluid">
          <%= link_to image_tag("default_user.png"), '#'%>
    </div>
    <% if signed_in? %>
      <div class="row-fluid">
        <%= render 'follow_form' %>
      </div>
    <% end %>
  </div>
  <div class="span10">
    <div class="row-fluid">
      <h2>
        <%= @user.name.downcase %>
      </h2>
    </div>
    <div class="row-fluid">
      <%= render 'shared/stats'%>
    </div>
  </div>
  
</div>

<% if @user.debates.any? %>
  <div class="section-title">
  my debates
  </div>
  <ol class="debates">
    <%= render @debates %>
  </ol>
  <%= will_paginate @debates, page_links: false, class: "my_pagination" %>

<% else %>
  <div class="content">
  <% if current_user?(@user) %>
    You have not started any debates yet!
  <% else %>
    <%= @user.name.downcase %> has not started any debates yet!
  <% end %>
  </div>
<% end %>


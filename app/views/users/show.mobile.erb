<div class="row-fluid">
  <div class="span2">
    <div class="row-fluid">
      <%= image_tag("default_user.png")%>
    </div>
    
    <% if current_user?(@user)%>
      <div class="row-fluid">
        <%= link_to "change", '#'%>
      </div>
    <% end %>

    <% if signed_in? %>
      <div class="row-fluid">
        <%= render 'follow_form' %>
      </div>
    <% end %>
  </div>
  <div class="span10">
    <div class="row-fluid">
      <h1>
        <%= @user.name.downcase %>
      </h1>
    </div>
    <div class="row-fluid">
    about me
    </div>
  </div>
</div>

<div class="row-fluid center">
  <%= render 'shared/stats'%>
</div>




<% if @user.debates.any? %>
  <ol class="debates">
    <%= render @debates %>
  </ol>
  <%= will_paginate @debates, page_links: false, class: "my_pagination" %>
<% end %>



<div class="section-title">
	<%= @section_title %>
</div>
<ul class="users">
	<% @users.each do |user|  %>
		<li>
			<%= link_to user.name, user %>
			<% if current_user.admin? && !current_user?(user) %>
    			| <%= link_to "delete", user, method: :delete, confirm: "You sure?" %>
    		<% end %>
			<div class="description">
				<%= pluralize(user.debates.size, "debate")%> | <%= pluralize(user.viewpoints.published.size, "vupnt")%> | <%= pluralize(user.followers.size, "follower")%> 
			</div>
		</li>
	<% end %>
</ul>

<%= will_paginate @users, page_links: false, class: "my_pagination" %>
<%= render 'search_by_name_form' %>

<div class="row-fluid"><h1 class="pull-left">settings</h1></div>

<div class="row-fluid">
  
    <%= form_for(@user) do |f| %>

    	<%= render 'shared/error_messages', object: f.object %>	

      	<%= f.label :name, "Your full name" %>
      	<%= f.text_field :name, maxlength: 30 %>

      	<%= f.label :password %>
      	<%= f.password_field :password, maximum: 15 %>

      	<%= f.label :password_confirmation, "Re-enter password" %>
      	<%= f.password_field :password_confirmation %>

      	<div class="row-fluid center">
      		<%= f.submit "update", class: "btn btn-large btn-primary" %>
      	</div>
    
    <% end %>
  
</div>